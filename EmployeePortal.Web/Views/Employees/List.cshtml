@model List<EmployeePortal.Web.Models.Entities.Employee>

<h2>Employees</h2>

<form asp-action="List" method="get" class="row g-3">

    <div class="col-auto">
        <label class="col-form-label">Search by name(code/city):</label>
    </div>

    <div class="col-auto">
        <input type="text" class="form-control" placeholder="Enter data" name="searchEmployee" />
    </div>

    <div class="col-auto">
        <input type="submit" value="Search" class="btn btn-primary " />
    </div>

    <div class="col-auto">
        <a type="submit" class="btn btn-secondary" asp-route="List">Back to full list</a>
    </div>

</form>
<form method="get" class="mt-3" >
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.Name</td>
                <td>@employee.Code</td>
                <td>@employee.CityName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.ID">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>