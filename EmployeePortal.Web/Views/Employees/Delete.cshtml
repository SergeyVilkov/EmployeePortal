@model EmployeePortal.Web.Models.Entities.Employee


<h3>Delete</h3>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h4>Are you sure you want to delete this employee?</h4>
<form method="post">
	<input type="hidden" asp-for="ID" />
<div class="mt-5">
	<h4>Employee</h4>
	<hr class="col-3"/>
	<dl class="row col-8">
		<dt class="col-sm-2">
			<label class="control-label">Name</label>
		</dt>
		<dd class="col-sm-10">
			<label class="control-label">@Model.Name</label>
		</dd>

		<dt class="col-sm-2">
			<label class="control-label">Code</label>
		</dt>
		<dd class="col-sm-10">
			<label class="control-label">@Model.Code</label>
		</dd>

		<dt class="col-sm-2">
			<label class="control-label">City</label>
		</dt>
		<dd class="col-sm-10">
			<label class="control-label">@Model.CityName</label>
		</dd>
	</dl>

<div class="form-group mt-3 row g-3">
	<div class="col-auto">
		<input type="submit" value="Delete" class="btn btn-danger" />
	</div>
	<div class="col-auto">
		<a type="submit" class="btn btn-secondary" asp-route="List">Back</a>
	</div>
</div>
</form>