@model EmployeePortal.Web.Models.Entities.Employee

<div class="form-horizontal col-3">
<h4>Add Employee</h4>
<hr />
<form method="post">
    <div class="form-group mt-3">
        <label class="control-label">Name</label>
            <input type="text" required placeholder="Enter name" class="form-control" asp-for="Name" />
    </div>

    <div class="form-group mt-3">
        <label class="control-label col-md-2">Code</label>
            <input type="text" required placeholder="Enter code" class="form-control" asp-for="Code" />
    </div>

    <div class="form-group mt-3">
        <label class="control-label col-md-2">City</label>
            @Html.DropDownListFor(model => model.CityName, (SelectList)ViewBag.Cities, "Select city", 
            new { @class = "form-control", required = "required" })
    </div>
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary" asp-action="Add" />
    </div>
</form>
</div>