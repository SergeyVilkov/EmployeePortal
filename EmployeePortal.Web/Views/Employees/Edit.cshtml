@model EmployeePortal.Web.Models.Entities.Employee

@{
    ViewBag.Title = "Edit employee";
}
<div class="form-horizontal col-3">
<h4>Edit Employee</h4>
<hr />

@if (Model is null)
{
    <p>No employee was found with this ID</p>
}
else
{
    <form method="post">
        <div class="form-group mt-3">
            <label class="control-label">ID</label>
            <input type="text" class="form-control" asp-for="ID" readonly/>
        </div>

        <div class="form-group mt-3">
            <label class="control-label">Name</label>
                <input type="text" required placeholder="Enter name" class="form-control" asp-for="Name" />
        </div>

        <div class="form-group mt-3">
            <label class="control-label">Code</label>
                <input type="text" required placeholder="Enter code" class="form-control" asp-for="Code" />
        </div>

        <div class="form-group mt-3">
            <label class="control-label">City</label>
                @Html.DropDownListFor(model => model.CityName, (SelectList)ViewBag.Cities, "Select city", 
                new { @class = "form-control", placeholder = "Select city", required = "required"})
        </div>

        <div class="form-group mt-3 row g-3">
            <div class="col-auto">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="Edit"/>
            </div>
            <div class="col-auto">
                <a type="submit" class="btn btn-secondary" formnovalidate asp-route="List">Back</a>
            </div>
        </div>
    </form>
    }
</div>